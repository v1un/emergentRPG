# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Google AI Studio API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017/emergentRPG
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here

# Backend Configuration
BACKEND_PORT=8001
BACKEND_HOST=0.0.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:8001

# MongoDB Express (Development Only)
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=your_mongo_express_password_here

# Docker Configuration
COMPOSE_PROJECT_NAME=emergentRPG

# Production specific (uncomment for production)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
# DOMAIN=yourdomain.com
